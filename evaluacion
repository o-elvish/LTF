  <script>
    const form = document.getElementById('feedback-form');
    const btn = document.getElementById('submit-btn');
    const formContent = document.getElementById('form-content');
    const successMessage = document.getElementById('success-message');
    const selectPonente = document.getElementById('clave');

    // CARGAR LISTA AUTOMÃTICA
    window.onload = function() {
       const SCRIPT_URL = form.action; 
       
       fetch(SCRIPT_URL + "?action=getSpeakers") 
         .then(res => res.json())
         .then(data => {
            selectPonente.innerHTML = '<option value="" disabled selected>Selecciona una opciÃ³n</option>';
            data.forEach(item => {
               const option = document.createElement('option');
               option.value = item;
               option.innerText = item;
               selectPonente.appendChild(option);
            });
         })
         .catch(err => {
            console.log("Usando lista manual por error de conexiÃ³n.");
            selectPonente.innerHTML = `
               <option value="" disabled selected>Selecciona...</option>
               <option value="Ponente 1">Ponente 1</option>
               <option value="Ponente 2">Ponente 2</option>
            `;
         });
    };

    // ENVIAR FORMULARIO
    form.addEventListener('submit', e => {
      e.preventDefault();
      btn.disabled = true;
      btn.innerText = 'Enviando... â³';

      fetch(form.action, {
        method: 'POST',
        body: new FormData(form),
        mode: 'no-cors'
      })
      .then(() => {
        formContent.style.display = 'none';
        successMessage.style.display = 'block';
        window.scrollTo({ top: 0, behavior: 'smooth' });
      })
      .catch(err => {
        alert('Hubo un error al enviar. Revisa tu conexiÃ³n.');
        btn.disabled = false;
        btn.innerText = 'Enviar EvaluaciÃ³n ğŸš€';
      });
    });
  </script>
